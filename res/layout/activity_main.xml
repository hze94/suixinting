<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
     <RelativeLayout
        android:id="@+id/play_column"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D46F1F"
        android:layout_alignParentBottom="true">
        
         <Button
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_action_next"/>
         
        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/forward"
            android:background="@drawable/ic_action_play_over_video"/>

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/play"
            android:background="@drawable/ic_action_previous" />
        

        <TextView 
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="泡沫"
            />
        
        <TextView
            android:id="@+id/singerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/songName"
            android:gravity="center|bottom"
            android:paddingBottom="15dp"
            android:paddingLeft='5dp'
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="邓紫棋"
            />
        
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/play_column" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    
</RelativeLayout>